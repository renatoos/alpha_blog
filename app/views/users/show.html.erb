<section class="hero is-info">
  <div class="hero-body">
  <div class="container has-text-centered">
    <p class="title">
      User Profile
    </p>
    <p class="subtitle">
      This is you profile page
    </p>
  </div>
  </div>
</section>

<br/>

<div class="container">

  <nav class="level">
    <div class="level-item has-text-centered">
        <div>
          <figure class="image is-128x128">
            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
          </figure>
        </div>

        <div>
          <p class="title"><%= @user.username %></p>
          <p class="heading"><%= @user.email %></p>
        </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Published Articles</p>
        <p class="title"> <%= @user.articles.count %> </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Followers</p>
        <p class="title">456K</p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="heading">Likes</p>
        <p class="title">789</p>
      </div>
    </div>
  </nav>

  <div class="columns">
      <% @user.articles.each_with_index do |article, index|  %>

  <% if index>0 && index%2==0 %>
  <!-- internal close columns -->
  </div>
  <!-- new columns -->
  <div class="columns">
  <% end %>

          <div class="column">
            <div class="box">
              <p class="title"><%= article.title %> </p>
              <p class="subtitle"><%= article.description %> </p>
              <%= link_to 'Edit', edit_article_path(article), class: "button" %> 
              <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?" }, class: "button"  %> 
            </div>
          </div>
      <% end %>
<!-- final close columns -->
 </div>

  

<!-- Closes DIV container -->      
</div>