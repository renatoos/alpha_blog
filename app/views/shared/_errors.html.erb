<% if obj.errors.any? %>

  <div class="notification is-danger">
    <button class="delete"></button>

    <h4> The following errors prevent the <%= obj.class.name.downcase%> from being saved </h4>
    <ul>
    <% obj.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
    <% end %>
    </ul>

  </div>

<% end %>